---
layout: null
---
{
  "name": "{{ site.title }}",
  "short_name": "{{ site.name }}",
  "description": "{{ site.description }}",
  "start_url": "{{ site.baseurl }}/",
  "scope": "{{ site.baseurl }}/",
  "display": "standalone",
  "background_color": "{{ site.pwa.background_color }}",
  "theme_color": "{{ site.pwa.theme_color }}",
  "orientation": "portrait-primary",
  "icons": [
    {
      "src": "{{ site.logo | relative_url }}",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "{{ site.pwa.icon_192 | relative_url }}",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "{{ site.pwa.icon_512 | relative_url }}",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ]
}